{
  "name": "noasstavern",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "concurrently 'yarn:build:backend' 'yarn:build:frontend'",
    "build:frontend": "yarn workspace noasstavern-frontend build",
    "build:backend": "yarn workspace noasstavern-backend build",
    "dev": "concurrently 'yarn:dev:backend' 'yarn:dev:frontend'",
    "dev:frontend": "yarn workspace noasstavern-frontend dev",
    "dev:backend": "yarn workspace noasstavern-backend dev",
    "start": "yarn workspace noasstavern-backend start",
    "prepare": "husky"
  },
  "packageManager": "yarn@v4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.7"
  }
}
